@page
@model Kasim.Core.BrPbsWebApp.Pages.InventoryModel
@{
    ViewData["Title"] = "库存";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>库存列表</h2>

<div class="row">
    <div class="col-md-3">
        <form asp-action="ClientModel">
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="IsHYProduct"> 在途商品
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PName"></label>
                <input type="text" class="form-control" asp-for="PName" placeholder="请输入商品接口中的PID">
            </div>

            <hr />
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="ToJson"> JSON格式
                </label>
            </div>
            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
            <button type="button" id="format" class="btn btn-success">Format</button>
        </form>
    </div>
    <div class="col-md-9">
        <form>
            <div class="form-group">
                <label asp-for="PostUrl">Url</label>
                <textarea class="form-control" rows="2" asp-for="PostUrl" readonly="readonly"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ResponseText">Response</label>
                <textarea class="form-control" rows="20" asp-for="ResponseText" readonly="readonly"></textarea>
            </div>
            <div class="form-group">
                <label for="ReqJson">Format</label>
                <pre id="ReqJson"></pre>
            </div>
        </form>
    </div>
</div>