@page
@model Kasim.Core.BrPbsWebApp.Pages.BillStatusModel
@{
    ViewData["Title"] = "单据状态";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>配送单状态</h2>

<div class="row">
    <div class="col-md-3">
        <form asp-action="BillStatus">
            <div class="form-group">
                <label asp-for="FormNumber"></label>
                <input type="text" class="form-control" asp-for="FormNumber" placeholder="随货联上的单据号码FormNumber">
            </div>            
            <hr />
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="ToJson"> JSON格式
                </label>
            </div>
            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
            <button type="button" id="format" class="btn btn-success">Format</button>
        </form>
    </div>
    <div class="col-md-9">
        <form>
            <div class="form-group">
                <label for="PostUrl">Url</label>
                <pre id="PostUrl">@Model.PostUrl</pre>
            </div>
            <div class="form-group">
                <label for="ResponseText">Response</label>
                <pre id="ResponseText">@Model.ResponseText</pre>
            </div>
        </form>


    </div>
</div>