@page
@model Kasim.Core.BrPbsWebApp.Pages.ProductModel
@{
    ViewData["Title"] = "商品列表";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>商品列表</h2>

<div class="row">
    <div class="col-md-3">
        <form asp-action="ClientModel">
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="IsHYProduct"> 在途商品
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EditDate"></label>
                <input type="date" class="form-control" asp-for="EditDate" placeholder="请输入检索名称">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="IsInv"> 有库存
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PName"></label>
                <input type="text" class="form-control" asp-for="PName" placeholder="请输入检索名称">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="IsZ"> 包含赠品
                </label>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="IsStop"> 包含停售
                </label>
            </div>
            <hr />
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="ToJson"> JSON格式
                </label>
            </div>
            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
            <button type="button" id="format" class="btn btn-success">Format</button>
        </form>
    </div>
    <div class="col-md-9">
        <form>
            <div class="form-group">
                <label for="PostUrl">Url</label>
                <pre id="PostUrl">@Model.PostUrl</pre>
            </div>
            <div class="form-group">
                <label for="ResponseText">Response</label>
                <pre id="ResponseText">@Model.ResponseText</pre>
            </div>           
        </form>


    </div>
</div>