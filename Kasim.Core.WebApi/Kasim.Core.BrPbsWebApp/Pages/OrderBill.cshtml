@page
@model Kasim.Core.BrPbsWebApp.Pages.OrderBillModel
@{
    ViewData["Title"] = "要货单";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>要货单提交</h2>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <form asp-action="OrderBill">
            <div class="form-group">
                <label for="PostUrl">Url</label>
                <pre id="PostUrl">@Model.PostUrl</pre>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="ToJson"> JSON格式
                </label>
            </div>
            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
            <button type="button" id="format" class="btn btn-success">Format</button>
            <hr />
            <div class="form-group">
                <label asp-for="PostData"></label>
                <textarea rows="5" class="form-control" asp-for="PostData" placeholder='要货单数据,***必须Xml格式*** XML头:<?xml version="1.0" encoding="utf-8" ?>'></textarea>
            </div>
            <div class="form-group">
                <label for="ResponseText">Response</label>
                <pre id="ResponseText">@Model.ResponseText</pre>
            </div>
        </form>
    </div>    
</div>