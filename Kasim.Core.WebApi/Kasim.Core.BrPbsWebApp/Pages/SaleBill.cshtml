@page
@model Kasim.Core.BrPbsWebApp.Pages.SaleBillModel
@{
    ViewData["Title"] = "配送单";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>配送单列表</h2>

<div class="row">
    <div class="col-md-3">
        <form asp-action="SaleBillModel">
            <div class="form-group">
                <label asp-for="SystemDate"></label>
                <input type="date" class="form-control" asp-for="SystemDate">
            </div>
            <div class="form-group">
                <label asp-for="StoreID"></label>
                <input type="text" class="form-control" asp-for="StoreID" placeholder="请输入部门StoreID">
            </div>
            <div class="form-group">
                <label asp-for="SaleBillID"></label>
                <input type="text" class="form-control" asp-for="SaleBillID" placeholder="请输入单据SaleBillID">
            </div>         
            <hr />
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="ToJson"> JSON格式
                </label>
            </div>
            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
            <button type="button" id="format" class="btn btn-success">Format</button>
        </form>
    </div>
    <div class="col-md-9">
        <form>
            <div class="form-group">
                <label for="PostUrl">Url</label>
                <pre id="PostUrl">@Model.PostUrl</pre>
            </div>
            <div class="form-group">
                <label for="ResponseText">Response</label>
                <pre id="ResponseText">@Model.ResponseText</pre>
            </div>
        </form>


    </div>
</div>